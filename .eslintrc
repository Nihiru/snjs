{
  "extends": ["eslint:recommended", "semistandard", "prettier"],
  "parser": "babel-eslint",
  "rules": {
    "standard/no-callback-literal": 0, // Disable this as we have too many callbacks relying on literals
    "no-throw-literal": 0,
    "semi": 1,
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ]
  },
  "env": {
    "browser": true
  },
  "globals": {
  }
}
